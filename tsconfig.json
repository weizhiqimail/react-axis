{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "axis": ["src/components/index.tsx"],
      "axis/es/*": ["src/components/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "target": "es6",
    "importHelpers": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "skipLibCheck": true
  },
  "include": [
    "typings/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
